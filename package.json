{
	"name": "@witchcraft/nuxt-logger",
	"version": "0.0.0",
	"description": "Nuxt module for logging.",
	"repository": "witchcraftjs/nuxt-logger",
	"license": "MIT",
	"type": "module",
	"sideEffects": false,
	"exports": {
		".": {
			"types": "./dist/types.d.mts",
			"import": "./dist/module.mjs"
		},
		"./*": {
			"types": "./dist/runtime/*.d.ts",
			"import": "./dist/runtime/*.js"
		},
		"./electron": {
			"types": "./dist/runtime/electron/index.d.ts",
			"import": "./dist/runtime/electron/index.js"
		}
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"prepare": "husky && cd playground && pnpm i",
		"build": "nuxt-module-build prepare && nuxt-module-build build && nuxi build playground",
		"dev": "nuxi dev playground",
		"dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
		"lint": "eslint \"{src,test,playground/app}/**/*.{ts,vue}\" \"*.{js,cjs,mjs,ts}\"",
		"lint:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest watch"
	},
	"//peerDependencies": "Because we need the real paths to the workers, they must both be in the app's node_modules",
	"peerDependencies": {
		"pino": "^9.4.0",
		"pino-pretty": "^11.2.2"
	},
	"dependencies": {
		"@alanscodelog/tsconfigs": "^6.0.0",
		"@alanscodelog/utils": "^5.1.0",
		"@nuxt/kit": "^4.0.1",
		"defu": "latest",
		"pino": "^9.4.0",
		"pino-pretty": "^11.2.2"
	},
	"devDependencies": {
		"@alanscodelog/eslint-config": "^5.0.0",
		"@nuxt/devtools": "^2.4.0",
		"@nuxt/eslint-config": "^1.3.0",
		"@nuxt/module-builder": "^1.0.1",
		"@nuxt/schema": "^4.0.1",
		"@nuxt/test-utils": "^3.14.2",
		"@types/node": "latest",
		"changelogen": "^0.6.1",
		"electron": "^34.0.0",
		"eslint": "^9.25.1",
		"husky": "^9.1.7",
		"nuxt": "^4.0.1",
		"typescript": "~5.8.3",
		"vitest": "^3.1.2",
		"vue-tsc": "^2.2.8"
	}
}
