{
	"name": "@witchcraft/nuxt-logger",
	"version": "0.0.2",
	"description": "Nuxt module for logging.",
	"repository": "witchcraftjs/nuxt-logger",
	"license": "MIT",
	"type": "module",
	"sideEffects": false,
	"exports": {
		".": {
			"types": "./dist/types.d.mts",
			"import": "./dist/module.mjs"
		},
		"./*": {
			"types": "./dist/runtime/*.d.ts",
			"import": "./dist/runtime/*.js"
		},
		"./electron": {
			"types": "./dist/runtime/electron/index.d.ts",
			"import": "./dist/runtime/electron/index.js"
		}
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"prepare": "husky && cd playground && pnpm i",
		"build": "nuxt-module-build prepare && nuxt-module-build build && nuxi build playground",
		"build:only": "nuxt-module-build build",
		"dev": "nuxi dev playground",
		"dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
		"lint": "eslint \"{src,test,playground/app}/**/*.{ts,vue}\" \"*.{js,cjs,mjs,ts}\"",
		"lint:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest watch"
	},
	"//peerDependencies": "Because we need the real paths to the workers, they must both be in the app's node_modules",
	"peerDependencies": {
		"pino": "^9.8.0",
		"pino-pretty": "^11.2.2"
	},
	"dependencies": {
		"@alanscodelog/tsconfigs": "^6.2.0",
		"@alanscodelog/utils": "^6.0.1",
		"@nuxt/kit": "^4.0.3",
		"defu": "latest",
		"pino": "^9.9.0",
		"pino-pretty": "^11.3.0"
	},
	"devDependencies": {
		"@alanscodelog/eslint-config": "^6.3.0",
		"@alanscodelog/semantic-release-config": "^5.0.4",
		"@nuxt/eslint-config": "^1.9.0",
		"@nuxt/module-builder": "^1.0.2",
		"@nuxt/schema": "^4.0.3",
		"@nuxt/test-utils": "^3.19.2",
		"@types/node": "latest",
		"changelogen": "^0.6.2",
		"electron": "^34.5.8",
		"eslint": "^9.34.0",
		"husky": "^9.1.7",
		"nuxt": "^4.0.3",
		"semantic-release": "^24.2.8",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4",
		"vue-tsc": "^2.2.12"
	},
	"release": {
		"extends": [
			"@alanscodelog/semantic-release-config"
		]
	},
	"commitlint": {
		"extends": [
			"@alanscodelog"
		]
	},
	"publishConfig": {
		"access": "public"
	}
}
